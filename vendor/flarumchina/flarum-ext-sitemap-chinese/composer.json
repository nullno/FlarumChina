{
    "name": "flarumchina/flarum-ext-sitemap-chinese",
    "description": "Generate a Sitemap for Flarum automatically for Chinese",
    "type": "flarum-extension",
    "keywords": ["sitemap", "generator"],
    "license": "MIT",
    "authors": [
        {
            "name": "Allyson S Bacon",
            "email": "allyson_198@hotmail.com"
        }
    ],
    "support": {
        "issues": "https://github.com/FlarumChina/flarum-ext-sitemap-chinese/issues",
        "source": "https://github.com/FlarumChina/flarum-ext-sitemap-chinese"
    },
    "require": {
        "flarum/core": "^0.1.0-beta.6",
        "samdark/sitemap": "^2.0.4"
    },
    "autoload": {
        "psr-4": {
            "Terabin\\Sitemap\\": "src/"
        }
    },
    "extra": {
        "flarum-extension": {
            "title": "Sitemap for Chinese",
            "icon": {
                "name": "sitemap",
                "backgroundColor": "#000",
                "color": "#fff"
            }
        }
    }
}
